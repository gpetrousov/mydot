# This is Git's per-user configuration file.
[core]
	editor = vim

[alias]
	s = status
	d = diff
	a = add

# Specific config for work repos
[includeIf "gitdir:~/work_repos/"]
	path = ~/work_repos/.gitconfig

# Specific config for dev repos
[includeIf "gitdir:~/dev/"]
	path = ~/dev/.gitconfig

[url "git@github.com:"]
        insteadOf = https://github.com/
